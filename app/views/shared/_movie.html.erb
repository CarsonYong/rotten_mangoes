<div class = "small-4 columns" >
  <div class = "card" data-clearing>
    <%= link_to image_tag(movie.poster_image_url), movie_path(movie) %>
    <div class="card-divider">
      <h3><%= link_to movie.title, movie_path(movie) %></h3>
    </div>
    <h5><%= formatted_date(movie.release_date) %></h5>
    <h5>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h5>
    <div class="card-section">
      <p class="movie-desc"><%= movie_description(movie) %></p>
      <%= movie.review_average %>/10
      <%= image_tag movie.image_url(:small) if movie.image? %>
    </div>  
  </div>
</div>
  

  