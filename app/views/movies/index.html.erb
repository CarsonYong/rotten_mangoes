<div class="small-12 small-centered medium-8 medium-centered large-5 large-centered columns">
<h2 class="page-title">Rotten Mangoes</h2>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>

<%= form_tag(movies_path, method: :get) do %>
  <%= label_tag :search %>
  <%= text_field_tag :search %><br>

  <%= label_tag "Duration" %>
  
  <%= select_tag :runtime_in_minutes, options_for_select(@movietimes) %> 
 

  <%= submit_tag "Search", class: "button" %>
<% end %>

</div>

<div class ="row">
  <% @movies.each do |movie| %>

  <%= render 'shared/movie', :movie => movie %>

  <% end %>
</div>
